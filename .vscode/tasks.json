{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build Chat App with c++14",
            "command": "/usr/local/bin/g++-14",
            "args": [
                "-std=c++14",
                "-I/usr/local/opt/boost/include",
                "-I/usr/local/opt/openssl@3.0/include",
                "-L/usr/local/opt/boost/lib",
                "-L/usr/local/opt/openssl@3.0/lib",
                "main.cpp", "network.cpp", "ui.cpp",
                "-lboost_system",
                "-lssl",
                "-lcrypto",
                "-o",
                "${workspaceFolder}/myChat"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
