{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build chat app with Boost and OpenSSL",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "main.cpp",
                
                "-I/usr/local/opt/boost/include",
                "-I/usr/local/opt/openssl@3/include",
                "-L/usr/local/opt/boost/lib",
                "-L/usr/local/opt/openssl@3/lib",
                "-lboost_system",
                "-lssl",
                "-lcrypto",
                "-lpthread",
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "-o",
                "${fileDirname}/myChat"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}